{
  "expo": {
    "name": "Beamchat",
    "slug": "beamchat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
		"scheme": "beamchat",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
			"bundleIdentifier": "com.cmartinyocripto.BeamchatFrontend"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.cmartinyocripto.BeamchatFrontend"
    },
    "web": {
      "favicon": "./assets/favicon.png",
			"bundler": "metro"
    },
		"plugins": [
      "expo-router",
			"expo-font",
			"expo-localization",
			"expo-secure-store"
    ]
  }
}
